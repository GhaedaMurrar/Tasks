'''
implement a Smart Stack using list  -- it would be more efficient if SmartStack Inherits form Stack class
''' 

class SmartStack:
    def __init__(self):
        self.items = []
        
    def Peek(self):
        if self.IsEmpty() == True :
            print("The stack is empty ! ")
        else:     
            print ("The top of the stack is  " + self.items[-1])

    def Pop(self):
        if self.IsEmpty() == True :
            print("nth to be deleted , The stack is empty ! ")
        else:     
            print ("Item " + str(self.items[-1]) + " is deleted successfully")
            del self.items[-1]
                
    def Push(self, item):
        self.items.append(item)

    def IsEmpty(self):
        if len(self.items) == 0 :
            return True 
        else: 
            return False
    
    def nPop(self,n):
        self.items = self.items[0:len(self.items)-n] 
        
    def nPush(self, List):
        self.items.extend(List)
        
if __name__ == "__main__":
    myStack = SmartStack()
    print ("Your Stack is created Successfully .")
    text = '''
    1. Check if it's empty or not .
    2. delete the top .
    3. add to the top .
    4. return the top .
    5. delete n items .
    6. add n items .
    
    Enter the number : 
    '''
    while True :
        print (text)
        num = input("")
        if num == 1 :
            if myStack.IsEmpty():
                print ("It's Empty ")
            else: 
                print myStack.items
                print ("It's not Empty ")
        elif num == 2 : myStack.Pop()
        elif num == 3 :
            item = raw_input("Please , Enter the item that you wanna to add  : ")
            myStack.Push(item)
        elif num == 4 : myStack.Peek()
        elif num == 5 :
            n = input("Please , Enter the number of items that you wanna to delete : ")
            myStack.nPop(n)
        elif num == 6 :
            temp=[]
            n= input("Please , Enter the size of the list that you wanna to add : ")
            while n != 0:
                item = input("Enter an item : ")
                temp.append(item)
                n-=1
            myStack.nPush(temp)
        else :
            print ("invalid input !")
         
